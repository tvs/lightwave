                    {
                        "name": "tenant",
                        "in": "query",
                        "required": false,
                        "type": "string"
                    },
                    {
                        "name": "searchscope",
                        "description": "(base/one/sub) default to sub",
                        "in": "query",
                        "required": false,
                        "type": "string"
                    },
                    {
                        "name": "filter",
                        "description": "ldap style filter",
                        "in": "query",
                        "required": false,
                        "type": "string"
                    },
                    {
                        "name": "attrs",
