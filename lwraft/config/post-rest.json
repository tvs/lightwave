                    {
                        "name": "tenant",
                        "in": "query",
                        "required": false,
                        "type": "string"
                    },
                    {
                        "name": "recursive",
                        "in": "query",
                        "required": false,
                        "type": "boolean"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Generic POST response",
                        "schema": {
                            "$ref": "#/definitions/GenericResponse"
                        }
                    }
                },
                "tags": [
                    "object"
                ]
            }
